<form action="/movies/<%= movie._id %>/edit" method="post" class="container">
  <h1>Edit movie <%=movie.title%></h1>
  <div class="form-group">
    <input type="text" class="form-control" placeholder="<%=movie.title%>"  name="movie[title]" disabled>
  </div>
  <div class="form-group">
    <input type="text" class="form-control" value="<%=movie.link%>" name="movie[link]" required>
  </div>
  <button type="submit" class="btn btn-lg btn-primary">Submit</button>
</form>
