<% include ../partials/header.ejs %>
<div class="row" style="padding-top: 70px">
    <h1 style="text-align: center">Please select the movie you are looking for ...</h1>
    <div style="width: 70%; margin: 25px auto;">
        <% if(data.Search){ %>
            <form action="/movies/new" method="POST">
                <div class="btn-group" data-toggle="buttons" style="padding-bottom: 40px">
                 <% for(var i=0;i<data.Search.length;i++)
                    { %> <li style="padding-top: 10px">
                            
                                <label class="btn btn-primary" style="background-color: #3db10e">
                                    <input id="option 1" type="radio" name="imdbID" value="<%= data.Search[i].imdbID %>" required> <%= data.Search[i].Title %> (<%= data.Search[i].Year %>)
                                </label>
                        </li>
                    <% } %>
                </div>
                <div class="form-group">
                    <p><strong>Download Link:</strong> <input class="form-control" type="text" name="link" placeholder="paste download link here" required></p>
                </div>
                <div class="form-group">
                    <button  class="btn btn-lg btn-primary btn-block">SUBMIT</button>
                </div>
            </form>
        <% } else { %>
            <p>Please try using another word or check your spelling</p> <% res.redirect("back"); } %>
    </div>
    </div>
<% include ../partials/footer.ejs %>